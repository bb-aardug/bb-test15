<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<record id="product_template_form_view_inhbb" model="ir.ui.view">
	        <field name="name">product.template.common.form.inh</field>
	        <field name="model">product.template</field>
	        <field name="inherit_id" ref="product.product_template_form_view"/>
	        <field name="arch" type="xml">
                <xpath expr="//page[@name='sales']" position="after">
	        		<page string="Tekst Block" name="text_block">
	        			<group name="text_block1">
                            <separator string="Tekst Block 1" colspan="4"/>
                            <field name="x_aa_bb_text_block1" colspan="4" nolabel="1"/>
                        </group>
                        <group name="text_block2">
                            <separator string="Tekst Block 2" colspan="4"/>
                            <field name="x_aa_bb_text_block2" colspan="4" nolabel="1"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>